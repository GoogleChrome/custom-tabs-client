<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <android.support.customtabs.browseractions.BrowserActionsDefaultMenuView
      android:id="@+id/browser_actions_menu_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:minWidth="280dp"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:layout_gravity="center"
      android:background="@drawable/bg_default">
      <TextView
          android:id="@+id/browser_actions_header_text"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"
          android:paddingStart="20dp"
          android:paddingEnd="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:maxLines="1"
          android:textSize="13sp"
          android:textStyle="bold"
          android:ellipsize="end"
          android:textColor="@color/default_title_color" />
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#1e000000" />
      <ListView
          android:id="@+id/browser_actions_menu_items"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:dividerHeight="0dp"
          android:divider="@null" />
  </android.support.customtabs.browseractions.BrowserActionsDefaultMenuView>
</FrameLayout>